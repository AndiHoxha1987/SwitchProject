<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:colorBorder="@android:color/white"
        app:colorOff="@android:color/holo_red_light"
        app:colorOn="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:on="false"
        app:textOff="OFF"
        app:textOn="ON" />

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:colorBorder="@android:color/black"
        app:colorOff="@android:color/white"
        app:colorOn="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/switch3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch1"
        app:on="false"
        app:textOff="OFF"
        app:textOn="ON" />

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:colorBorder="#00c4a6"
        app:colorOff="@android:color/black"
        app:colorOn="#00c4a6"
        app:layout_constraintBottom_toTopOf="@+id/switch4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch2"
        app:on="false"
        app:textOff="OFF"
        app:textOn="ON" />

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:colorBorder="#00c4a6"
        app:colorOn="#00c4a6"
        app:layout_constraintBottom_toTopOf="@+id/switch5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch3"
        app:on="false"
        app:textOff="OFF"
        app:textOn="ON" />

    <RadioGroup
        android:id="@+id/switch5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/switch5_red_out_line"
        android:checkedButton="@+id/offer"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/switch6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch4">

        <RadioButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/switch5_toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="@string/search"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/switch5_toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="@string/offers"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:thumb="@drawable/switch6_custom_thumb"
        app:layout_constraintBottom_toTopOf="@+id/switch7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch5"
        app:showText="true"
        app:track="@drawable/switch6_custom_track" />

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:id="@+id/switch7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jtbDuration="1500"
        app:jtbJelly="lazy_tremble_tail_slim_jim"
        app:jtbLeftBackgroundColor="@android:color/black"
        app:jtbLeftText="Male"
        app:jtbLeftTextColor="@android:color/white"
        app:jtbLeftTextSize="12sp"
        app:jtbLeftThumbColor="@android:color/black"
        app:jtbRightBackgroundColor="@android:color/holo_red_light"
        app:jtbRightText="Female"
        app:jtbRightTextColor="@android:color/white"
        app:jtbRightTextSize="12sp"
        app:jtbRightThumbColor="@android:color/holo_red_light"
        app:jtbTextMarginLeft="2dp"
        app:jtbTextMarginRight="2dp"
        app:layout_constraintBottom_toTopOf="@+id/switch8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch6" />

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:id="@+id/switch8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jtbColorChangeType="rgb"
        app:jtbDuration="1500"
        app:jtbEaseType="ease_out_circ"
        app:jtbJelly="lazy_tremble_tail_slim_jim"
        app:jtbLeftBackgroundColor="@android:color/holo_red_light"
        app:jtbLeftText="Male"
        app:jtbLeftTextColor="@android:color/white"
        app:jtbLeftTextSize="12sp"
        app:jtbLeftThumbColor="@android:color/black"
        app:jtbRightBackgroundColor="@android:color/black"
        app:jtbRightText="Female"
        app:jtbRightTextColor="@android:color/white"
        app:jtbRightTextSize="12sp"
        app:jtbRightThumbColor="@android:color/holo_red_light"
        app:jtbTextMarginLeft="2dp"
        app:jtbTextMarginRight="2dp"
        app:layout_constraintBottom_toTopOf="@+id/switch9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch7" />

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:id="@+id/switch9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jtbColorChangeType="hsv"
        app:jtbDuration="500"
        app:jtbEaseType="ease_in_out_circ"
        app:jtbJelly="active_tremble_tail_slim_jim"
        app:jtbLeftBackgroundColor="@android:color/black"
        app:jtbLeftText="On"
        app:jtbLeftTextColor="@android:color/black"
        app:jtbLeftTextSize="12sp"
        app:jtbLeftThumbColor="#00c4a6"
        app:jtbRightBackgroundColor="#00c4a6"
        app:jtbRightText="Off"
        app:jtbRightTextColor="#00c4a6"
        app:jtbRightTextSize="12sp"
        app:jtbRightThumbColor="@android:color/black"
        app:jtbTextMarginLeft="12dp"
        app:jtbTextMarginRight="12dp"
        app:layout_constraintBottom_toTopOf="@+id/switch10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch8" />

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:id="@+id/switch10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jtbDuration="500"
        app:jtbEaseType="ease_in_out_circ"
        app:jtbLeftBackgroundColor="@android:color/black"
        app:jtbLeftThumbColor="@android:color/holo_red_light"
        app:jtbRightBackgroundColor="@android:color/holo_red_light"
        app:jtbRightThumbColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/switch11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch9" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/switch11"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch10"
        app:ss_animationDuration="500"
        app:ss_animationType="curved"
        app:ss_iconPadding="14dp"
        app:ss_iconSize="22dp"
        app:ss_leftIcon="@drawable/ic_arrow_downward"
        app:ss_leftText="OFF"
        app:ss_rightIcon="@drawable/ic_arrow_upward"
        app:ss_rightText="ON"
        app:ss_selectedTextSize="14sp"
        app:ss_sliderBackgroundColor="@android:color/black"
        app:ss_switchColor="@android:color/holo_red_light"
        app:ss_textColor="@android:color/black"
        app:ss_textSize="12sp"
        app:ss_textVisibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
